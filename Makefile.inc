#-- HMCSIM_MACROS
HMCSIM_MACROS += -DHMC_PHY_REVISION=2
HMCSIM_MACROS += -DHMC_PRODUCT_REVISION=3
HMCSIM_MACROS += -DHMC_PROTOCOL_REVISION=2
HMCSIM_MACROS += -DHMC_VENDOR_ID=0xF

HMCSIM_MACROS += -DHMC_MAJOR_VERSION=2
HMCSIM_MACROS += -DHMC_MINOR_VERSION=1
HMCSIM_MACROS += -DHMC_APPEND_VERSION='"-beta-p.siegl"'

#HMCSIM_MACROS += -DHMC_DEBUG
HMCSIM_MACROS += -DHMC_USES_BOBSIM -DHMC_FAST_BOBSIM
HMCSIM_MACROS += -DHMC_USES_GRAPHVIZ

# choose _one_ LOGGING interface ...
#HMCSIM_MACROS += -DHMC_LOGGING_STDOUT
#HMCSIM_MACROS += -DHMC_LOGGING_SQLITE3
HMCSIM_MACROS += -DHMC_LOGGING_POSTGRESQL

#-- C COMPILER
CC=gcc

#-- C++ COMPILER
CXX=g++

#-- INCLUDE DIRECTORIES
INC=

#-- C COMPILER FLAGS
CFLAGS=-std=c++11 -Wall $(INC) $(HMCSIM_MACROS) #-pg

#-- C++ COMPILER FLAGS
CXXFLAGS=-std=c++11 -Wall $(INC) $(HMCSIM_MACROS)

#-- ARCHIVE BINARY
AR=ar
